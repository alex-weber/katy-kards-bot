extends layout

block content
  div.container
    // Page Title
    h3.text-center.text-primary.mt-4.mb-5 Commands

    // Chart Section for Messages
    div
      // Loading Spinner for Messages Chart
      div#loadingSpinner.d-flex.justify-content-center.align-items-center(style="height: 300px; display: flex;")
        div.spinner-border.text-primary(role="status")
      // Canvas for Messages Chart
      canvas#messagesChart(style="height: 300px; width: 100%; display: none;")

    // Subtitle
    h4.text-center.text-primary.mt-5.mb-3 Cards by Factions

    // Chart Section for Top Messages
    div(style="height: 500px; width: 100%; margin-bottom: 100px;")
      // Loading Spinner for Top Messages Chart
      div#loadingSpinnerTopMessages.d-flex.justify-content-center.align-items-center(style="height: 500px; display: flex;")
        div.spinner-border.text-primary(role="status")
      // Canvas for Top Messages Chart
      canvas#topMessagesChart(style="height: 500px; width: 100%; display: none;")


  script(src="/static/vendor/chart.js")
  script(src="/static/dashboard.js")



