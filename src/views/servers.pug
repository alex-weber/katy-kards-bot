extends layout

block content

  p.h2.text-primary.text-center= title + '(' + servers.length + ')'

  table.table.table-dark.table-striped.table-bordered.border-primary.table-hover
    thead
      tr
        th(scope='col') #
        th(scope='col') Icon
        th(scope='col') Name
        th(scope='col') ID
    tbody
      each server, index in servers
        tr
          th(scope='row')= index+1
          each attr in server
            if attr.startsWith('http')
              td
                img(src=attr, alt="No icon")
            else
              td= attr
  p &nbsp;
  p &nbsp;



